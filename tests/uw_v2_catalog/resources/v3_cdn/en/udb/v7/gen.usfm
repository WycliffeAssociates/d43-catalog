\v 1 Au \w commencement|strong="H7225"\w*, \w Dieu|strong="H430"\w* \w créa|strong="H1254" x-morph="strongMorph:TH8804"\w*\w |strong="H853"\w* les \w cieux|strong="H8064"\w*\w |strong="H853"\w* et la \w terre|strong="H776"\w*.
\v 2 La \w terre|strong="H776"\w* \w était|strong="H1961" x-morph="strongMorph:TH8804"\w* \w informe|strong="H8414"\w* et \w vide|strong="H922"\w*: il y avait des \w ténèbres|strong="H2822"\w* à la \w surface|strong="H6440"\w* de l'\w abîme|strong="H8415"\w*, et l'\w esprit|strong="H7307"\w* de \w Dieu|strong="H430"\w* se \w mouvait|strong="H7363" x-morph="strongMorph:TH8764"\w* au-\w dessus|strong="H5921"\w*\w |strong="H6440"\w* des \w eaux|strong="H4325"\w*.

\s5
\v 3  \w Dieu|strong="H430"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Que la \w lumière|strong="H216"\w* \w soit|strong="H1961" x-morph="strongMorph:TH8799"\w*! Et la \w lumière|strong="H216"\w* fut.
\v 4  \w Dieu|strong="H430"\w* \w vit|strong="H7200" x-morph="strongMorph:TH8799"\w*\w |strong="H853"\w* \w que|strong="H3588"\w* la \w lumière|strong="H216"\w* était \w bonne|strong="H2896"\w*; et \w Dieu|strong="H430"\w* \w sépara|strong="H914" x-morph="strongMorph:TH8686"\w*\w |strong="H996"\w* la \w lumière|strong="H216"\w* d'\w avec|strong="H996"\w* les \w ténèbres|strong="H2822"\w*.
\v 5  \w Dieu|strong="H430"\w* \w appela|strong="H7121" x-morph="strongMorph:TH8799"\w* la \w lumière|strong="H216"\w* \w jour|strong="H3117"\w*, et il \w appela|strong="H7121" x-morph="strongMorph:TH8804"\w* les \w ténèbres|strong="H2822"\w* \w nuit|strong="H3915"\w*. Ainsi, il y eut un \w soir|strong="H6153"\w*, et il y eut un \w matin|strong="H1242"\w*: ce fut le \w premier|strong="H259"\w* \w jour|strong="H3117"\w*.

\s5
\v 6  \w Dieu|strong="H430"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Qu'il y ait une \w étendue|strong="H7549"\w* \w entre|strong="H8432"\w* les \w eaux|strong="H4325"\w*, et qu'elle \w sépare|strong="H914" x-morph="strongMorph:TH8688"\w* les \w eaux|strong="H4325"\w* d'avec les \w eaux|strong="H4325"\w*.
\v 7 Et \w Dieu|strong="H430"\w* \w fit|strong="H6213" x-morph="strongMorph:TH8799"\w* l'\w étendue|strong="H7549"\w*, et il \w sépara|strong="H914" x-morph="strongMorph:TH8686"\w* les \w eaux|strong="H4325"\w* \w qui|strong="H834"\w* sont au-\w dessous|strong="H8478"\w* de l'\w étendue|strong="H7549"\w* d'avec les \w eaux|strong="H4325"\w* \w qui|strong="H834"\w* sont au-\w dessus|strong="H5921"\w* de l'\w étendue|strong="H7549"\w*. Et cela fut \w ainsi|strong="H3651"\w*.
\v 8  \w Dieu|strong="H430"\w* \w appela|strong="H7121" x-morph="strongMorph:TH8799"\w* l'\w étendue|strong="H7549"\w* \w ciel|strong="H8064"\w*. Ainsi, il y eut un \w soir|strong="H6153"\w*, et il y eut un \w matin|strong="H1242"\w*: ce fut le \w second|strong="H8145"\w* \w jour|strong="H3117"\w*.
